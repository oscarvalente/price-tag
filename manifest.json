{
    "name": "Price Tag",
    "version": "0.20.1",
    "description": "Records and tracks online shopping item prices",
    "manifest_version": 2,
    "permissions": [
        "storage",
        "activeTab",
        "tabs",
        "notifications",
        "webNavigation",
        "http://*/",
        "https://*/"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [{
        "js": [
            "page-agent.js"
        ],
        "matches": ["http://*/*", "https://*/*"]
    }
    ],
    "icons": {
        "16": "assets/icon_16.png",
        "48": "assets/icon_48.png",
        "128": "assets/icon_128.png"
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "web_accessible_resources": [
        "views/modal.html"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
